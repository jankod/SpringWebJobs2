<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level 1 %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="hr.bioinfo" level="DEBUG"/>
    <logger name="in ch.qos.logback" level="WARN"/>
</configuration>